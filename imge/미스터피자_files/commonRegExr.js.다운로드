//----------------------------------------------------
// 숫자만 입력
//----------------------------------------------------
function chkNum(obj) {
	var v = obj.value;
	if( v.match(/[^0-9]/g) ) {
		obj.value = v.replace(/[^0-9]/g,"");
		//alert("숫자만 입력가능합니다");
	}
}

//----------------------------------------------------
// 영문, 숫자만 입력
//----------------------------------------------------
function chkEngNum(obj) {
	var v = obj.value;
	if( v.match(/[^A-Za-z0-9]/g) ) {
		obj.value = v.replace(/[^A-Za-z0-9]/g,"");
		//alert("영어,숫자만 입력가능합니다");
	}
}

//----------------------------------------------------
//영문, 숫자, 특수문자만 입력
//----------------------------------------------------
function chkEngNumSpecial(obj) {
	var v = obj.value;
	if( v.match(/[^A-Za-z0-9~!@\#$%<>^&*]/g) ) {
		obj.value = v.replace(/[^A-Za-z0-9~!@\#$%<>^&*]/g,"");
		//alert("영어,숫자만 입력가능합니다");
	}
}

//----------------------------------------------------
//영문, 숫자,특수문자 일부만 입력 Email
//----------------------------------------------------
function chkEngNumSpecialEmail(obj) {
	var v = obj.value;
	if( v.match(/[^A-Za-z0-9-_.]/g) ) {
		obj.value = v.replace(/[^A-Za-z0-9-_.]/g,"");
		//alert("영어,숫자만 입력가능합니다");
	}
}

//----------------------------------------------------
//커서 이동
//----------------------------------------------------
function chkFocusMove(target1, target2, number) {
	try {
		if($("#"+target1).val().length >= number) {
			$("#"+target2).focus();
		}    
	} catch (e){}
}